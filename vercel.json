{
    "version": 2,
    "builds": [
      {
        "src": "server.ts",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["public/**", "views/**", "uploads/**, node_modules/**"],
          "installCommand": "npm ci"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server.ts"
      }
    ]
  }